        padding: 1.5rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        transition: all 0.3s;
        height: 100%;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .stat-card .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
    }

    .stat-card .stat-icon.users { background: var(--primary-gradient); }
    .stat-card .stat-icon.recipes { background: var(--success-gradient); }
    .stat-card .stat-icon.comments { background: var(--warning-gradient); }
    .stat-card .stat-icon.likes { background: var(--info-gradient); }

    .stat-card .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
    }

    .stat-card .stat-label {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .stat-card .stat-growth {
        font-size: 0.85rem;
        font-weight: 600;
    }

    .stat-growth.positive { color: #28a745; }
    .stat-growth.negative { color: #dc3545; }

    .chart-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        margin-bottom: 1.5rem;
        height: 100%;
    }

    .chart-card .chart-title {
        font-weight: 600;
        color: #333;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .chart-card .chart-title i {
        color: #667eea;
    }

    .table-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        margin-bottom: 1.5rem;
    }

    .table-card .table-title {
        font-weight: 600;
        color: #333;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .table-card .table-title i {
        color: #667eea;
    }

    .recent-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.75rem 0;
        border-bottom: 1px solid #eee;
    }

    .recent-item:last-child {
        border-bottom: none;
    }

    .recent-item img {
        width: 45px;
        height: 45px;
        border-radius: 10px;
        object-fit: cover;
    }

    .recent-item .item-info {
        flex: 1;
    }

    .recent-item .item-title {
        font-weight: 500;
        color: #333;
        margin-bottom: 0.25rem;
    }

    .recent-item .item-meta {
        font-size: 0.8rem;
        color: #6c757d;
    }

    .recent-item .item-badge {
        font-size: 0.75rem;
    }

    .user-avatar {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        object-fit: cover;
    }

    .rating-stars {
        color: #ffc107;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .stat-card .stat-value {
            font-size: 1.5rem;
        }
    }
</style>

