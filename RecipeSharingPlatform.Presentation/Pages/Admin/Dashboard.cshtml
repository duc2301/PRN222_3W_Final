@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Data from server
        const categoryData = @Html.Raw(JsonSerializer.Serialize(Model.Stats.RecipesByCategory));
        const difficultyData = @Html.Raw(JsonSerializer.Serialize(Model.Stats.RecipesByDifficulty));
        const usersMonthlyData = @Html.Raw(JsonSerializer.Serialize(Model.Stats.NewUsersMonthly));
        const recipesMonthlyData = @Html.Raw(JsonSerializer.Serialize(Model.Stats.NewRecipesMonthly));
        const topViewedData = @Html.Raw(JsonSerializer.Serialize(Model.Stats.TopViewedRecipes));
        const topLikedData = @Html.Raw(JsonSerializer.Serialize(Model.Stats.TopLikedRecipes));
        const publicRecipes = @Model.Stats.PublicRecipes;
        const privateRecipes = @Model.Stats.PrivateRecipes;

        // Chart.js default settings
        Chart.defaults.font.family = "'Poppins', sans-serif";

        // 1. Category Doughnut Chart
        new Chart(document.getElementById('categoryChart'), {
            type: 'doughnut',
            data: {
                labels: categoryData.map(c => c.categoryName),
                datasets: [{
                    data: categoryData.map(c => c.recipeCount),
                    backgroundColor: categoryData.map(c => c.color),
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'bottom', labels: { padding: 15 } }
                }
            }
        });

        // 2. Difficulty Pie Chart
        new Chart(document.getElementById('difficultyChart'), {
            type: 'pie',
            data: {
                labels: difficultyData.map(d => d.difficulty),
                datasets: [{
                    data: difficultyData.map(d => d.count),
                    backgroundColor: difficultyData.map(d => d.color),
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'bottom', labels: { padding: 15 } }
                }
            }
        });

        // 3. Visibility Donut Chart
        new Chart(document.getElementById('visibilityChart'), {
            type: 'doughnut',
            data: {
                labels: ['Public', 'Private'],
                datasets: [{
                    data: [publicRecipes, privateRecipes],
                    backgroundColor: ['#36A2EB', '#FF6384'],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'bottom', labels: { padding: 15 } }
                }
            }
        });

        // 4. Users Monthly Line Chart
        new Chart(document.getElementById('usersMonthlyChart'), {
            type: 'line',
            data: {
                labels: usersMonthlyData.map(u => u.monthLabel),
                datasets: [{
                    label: 'Ng∆∞·ªùi d√πng m·ªõi',
                    data: usersMonthlyData.map(u => u.count),
                    borderColor: '#667eea',
                    backgroundColor: 'rgba(102, 126, 234, 0.1)',
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#667eea',
                    pointRadius: 5
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });

        // 5. Recipes Monthly Area Chart
        new Chart(document.getElementById('recipesMonthlyChart'), {
            type: 'line',
            data: {
                labels: recipesMonthlyData.map(r => r.monthLabel),
                datasets: [{
                    label: 'C√¥ng th·ª©c m·ªõi',
                    data: recipesMonthlyData.map(r => r.count),
                    borderColor: '#11998e',
                    backgroundColor: 'rgba(17, 153, 142, 0.1)',
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#11998e',
                    pointRadius: 5
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });

        // 6. Top Viewed Horizontal Bar Chart
        new Chart(document.getElementById('topViewedChart'), {
            type: 'bar',
            data: {
                labels: topViewedData.map(r => r.title.length > 20 ? r.title.substring(0, 20) + '...' : r.title),
                datasets: [{
                    label: 'L∆∞·ª£t xem',
                    data: topViewedData.map(r => r.viewCount),
                    backgroundColor: 'rgba(102, 126, 234, 0.8)',
                    borderRadius: 5
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    x: { beginAtZero: true }
                }
            }
        });

        // 7. Top Liked Horizontal Bar Chart
        new Chart(document.getElementById('topLikedChart'), {
            type: 'bar',
            data: {
                labels: topLikedData.map(r => r.title.length > 20 ? r.title.substring(0, 20) + '...' : r.title),
                datasets: [{
                    label: 'L∆∞·ª£t th√≠ch',
                    data: topLikedData.map(r => r.likeCount),
                    backgroundColor: 'rgba(255, 99, 132, 0.8)',
                    borderRadius: 5
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    x: { beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });
    </script>
}

