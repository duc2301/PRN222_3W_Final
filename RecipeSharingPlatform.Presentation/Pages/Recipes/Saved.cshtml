@page
@model RecipeSharingPlatform.Presentation.Pages.Recipes.SavedModel
@{
    ViewData["Title"] = "Saved Recipes";
}

<div class="container py-5">
    <div class="d-flex align-items-center mb-4 gap-2">
        <h1 class="fw-bold mb-0">📚 Saved Recipes</h1>
        <span class="badge bg-secondary rounded-pill">@Model.SavedRecipes.Count</span>
    </div>

    @if (Model.SavedRecipes.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model.SavedRecipes)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden card-hover">
                        <div class="position-relative">
                            <img src="@(string.IsNullOrEmpty(item.MainImageUrl) ? "https://placehold.co/600x400?text=No+Image" : item.MainImageUrl)"
                                 class="card-img-top object-fit-cover"
                                 alt="@item.Title"
                                 style="height: 220px;">
                            <div class="position-absolute top-0 end-0 p-2">
                                <span class="badge bg-white text-dark shadow-sm">
                                    ⏱ @((item.PrepTime ?? 0) + (item.CookTime ?? 0)) min
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge bg-primary-subtle text-primary fw-bold">@item.CategoryName</span>
                                <small class="text-muted">👁 @item.ViewCount</small>
                            </div>
                            <h5 class="card-title fw-bold text-truncate">
                                <a asp-page="/Recipes/Details" asp-route-id="@item.RecipeId" class="text-decoration-none text-dark stretched-link">
                                    @item.Title
                                </a>
                            </h5>
                            <p class="card-text text-muted small text-truncate-2">@item.Description</p>
                        </div>
                        <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                            <div class="d-flex align-items-center gap-2">
                                <img src="@(string.IsNullOrEmpty(item.AuthorAvatar) ? "https://placehold.co/40x40" : item.AuthorAvatar)"
                                     class="rounded-circle border" width="30" height="30">
                                <small class="text-muted fw-semibold">@item.AuthorName</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="display-1 mb-3">📂</div>
            <h3>No saved recipes yet</h3>
            <p class="text-muted">Start exploring and bookmark your favorite recipes!</p>
            <a asp-page="/Recipes/Index" class="btn btn-primary rounded-pill px-4 mt-2">Browse Recipes</a>
        </div>
    }
</div>

<style>
    .card-hover {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
        }

    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>