@page
@model RecipeSharingPlatform.Presentation.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Recipe Sharing</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50">

    <div class="min-h-screen flex items-center justify-center p-4">
        <div class="bg-white w-full max-w-6xl rounded-[2rem] shadow-2xl overflow-hidden flex flex-col md:flex-row min-h-[600px]">

            <div class="w-full md:w-1/2 p-8 md:p-12 lg:p-16 flex flex-col justify-center relative">

                <a href="/" class="absolute top-8 left-8 md:left-12 flex items-center gap-2 hover:opacity-80 transition-opacity no-underline decoration-0">
                    <div class="bg-[#6C5DD3] text-white rounded-full flex items-center justify-center shadow-md" style="width: 36px; height: 36px; font-size: 16px;">
                        <i class="fas fa-utensils"></i>
                    </div>
                    <span class="font-bold text-xl text-gray-800 tracking-wide">RecipeShare</span>
                </a>

                <div class="mt-16 md:mt-0">
                    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">Holla,<br>Welcome Back</h1>
                    <p class="text-gray-500 mb-8 text-sm">Hey, welcome back to your special place</p>

                    <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4 text-center"></div>

                    <form method="post" class="space-y-5" asp-action="/Auth/Login">
                        <div>
                            <input asp-for="LoginInfo.Username"
                                   class="w-full px-5 py-3 rounded-xl border border-gray-200 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 outline-none transition-all text-gray-700 placeholder-gray-400"
                                   placeholder="Username" />
                            <span asp-validation-for="LoginInfo.Username" class="text-red-500 text-xs ml-1"></span>
                        </div>

                        <div>
                            <input asp-for="LoginInfo.Password" type="password"
                                   class="w-full px-5 py-3 rounded-xl border border-gray-200 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 outline-none transition-all text-gray-700 placeholder-gray-400 font-bold tracking-widest"
                                   placeholder="••••••••••••" />
                            <span asp-validation-for="LoginInfo.Password" class="text-red-500 text-xs ml-1"></span>
                        </div>

                        <div class="flex items-center justify-between text-sm">
                            <label class="flex items-center cursor-pointer">
                                <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500 accent-purple-600">
                                <span class="ml-2 text-gray-600">Remember me</span>
                            </label>
                            <a href="#" class="text-gray-500 hover:text-purple-600 transition-colors">Forgot Password?</a>
                        </div>

                        <button type="submit"
                                class="w-full bg-[#6C5DD3] hover:bg-[#5b4ec2] text-white font-semibold py-3.5 rounded-xl transition-all duration-300 shadow-lg shadow-purple-200 transform active:scale-95">
                            Sign In
                        </button>
                    </form>

                    <p class="mt-8 text-center text-sm text-gray-500">
                        Don't have an account?
                        <a asp-page="/Auth/Register" class="text-[#6C5DD3] font-semibold hover:underline">Sign Up</a>
                    </p>
                </div>
            </div>

            <div class="hidden md:flex w-full md:w-1/2 bg-gradient-to-br from-[#8E86F5] to-[#6C5DD3] relative items-center justify-center p-8 overflow-hidden">
                <div class="absolute top-10 left-10 w-24 h-24 bg-white opacity-20 rounded-full blur-xl"></div>
                <div class="absolute bottom-10 right-10 w-32 h-32 bg-white opacity-20 rounded-full blur-2xl"></div>

                <img src="https://cdni.iconscout.com/illustration/premium/thumb/login-3305943-2757111.png"
                     alt="Login Illustration"
                     class="relative z-10 w-full max-w-md object-contain drop-shadow-2xl animate-fade-in-up" />

                <div class="absolute top-1/4 right-1/4 bg-white p-3 rounded-2xl shadow-lg rotate-12 animate-bounce" style="animation-duration: 3s;">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
                </div>
            </div>

        </div>
    </div>

</body>
</html>