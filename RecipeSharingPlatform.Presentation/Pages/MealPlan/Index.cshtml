    }

    .day-card.today {
        border-left: 4px solid #667eea;
    }

    .day-header {
        padding: 1rem 1.5rem;
        background: #f8f9fa;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background 0.3s;
    }

    .day-header:hover {
        background: #e9ecef;
    }

    .day-header .day-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .day-header .day-name {
        font-weight: 600;
        font-size: 1.1rem;
        color: #333;
    }

    .day-header .day-date {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .day-header .today-badge {
        background: #667eea;
        color: white;
        padding: 0.25rem 0.75rem;
