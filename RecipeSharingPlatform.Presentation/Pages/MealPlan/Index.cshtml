        border: none;
    }

    .modal-header {
        border-bottom: none;
        padding: 1.5rem 1.5rem 1rem;
    }

    .modal-body {
        padding: 0 1.5rem 1.5rem;
    }

    .recipe-search-input {
        border-radius: 12px;
        padding: 0.75rem 1rem;
        border: 2px solid #dee2e6;
        transition: border-color 0.3s;
    }

    .recipe-search-input:focus {
        border-color: #667eea;
        box-shadow: none;
    }

    .recipe-list {
        max-height: 400px;
        overflow-y: auto;
    }

    .recipe-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        border-radius: 12px;
        cursor: pointer;
        transition: background 0.3s;
        border: 2px solid transparent;
    }

    .recipe-item:hover {
        background: #f8f9fa;
    }

    .recipe-item.selected {
        border-color: #667eea;
        background: rgba(102, 126, 234, 0.05);
    }

    .recipe-item img {
