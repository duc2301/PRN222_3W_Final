@section Scripts {
<script>
    let selectedDate = '';
    let selectedMealType = '';
    let selectedRecipeId = null;
    let searchTimeout = null;
    const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

    // M·ªü modal th√™m m√≥n
    function openAddModal(date, mealType) {
        selectedDate = date;
        selectedMealType = mealType;
        selectedRecipeId = null;

        // Format ng√†y hi·ªÉn th·ªã
        const dateObj = new Date(date);
        const dayNames = ['Ch·ªß Nh·∫≠t', 'Th·ª© Hai', 'Th·ª© Ba', 'Th·ª© T∆∞', 'Th·ª© NƒÉm', 'Th·ª© S√°u', 'Th·ª© B·∫£y'];
        document.getElementById('selectedDayLabel').textContent = 
            `${dayNames[dateObj.getDay()]}, ${dateObj.toLocaleDateString('vi-VN')}`;
        document.getElementById('selectedMealLabel').textContent = `B·ªØa ${mealType}`;

        // Reset form
        document.getElementById('recipeSearchInput').value = '';
        document.getElementById('recipeList').innerHTML = `
            <div class="text-center text-muted py-4">
                <i class="fas fa-search mb-2" style="font-size: 2rem;"></i>
                <p>Nh·∫≠p t√™n m√≥n ƒë·ªÉ t√¨m ki·∫øm...</p>
            </div>
        `;
        document.getElementById('servingsSection').style.display = 'none';
        document.getElementById('btnConfirmAdd').disabled = true;

        // Load recipes m·∫∑c ƒë·ªãnh
        searchRecipes('');

        new bootstrap.Modal(document.getElementById('addRecipeModal')).show();
    }

    // T√¨m ki·∫øm recipes
    function searchRecipes(query) {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(async () => {
            try {
                const response = await fetch(`/MealPlan?handler=SearchRecipes&search=${encodeURIComponent(query)}`);
                const result = await response.json();
                
                if (result.ok && result.data) {
                    renderRecipeList(result.data);
                }
            } catch (error) {
                console.error('Search error:', error);
            }
        }, 300);
    }

    // Render danh s√°ch recipes
    function renderRecipeList(recipes) {
        const container = document.getElementById('recipeList');
        
        if (recipes.length === 0) {
            container.innerHTML = `
                <div class="text-center text-muted py-4">
                    <i class="fas fa-search-minus mb-2" style="font-size: 2rem;"></i>
                    <p>Kh√¥ng t√¨m th·∫•y m√≥n ƒÉn ph√π h·ª£p</p>
                </div>
            `;
            return;
        }

        container.innerHTML = recipes.map(r => `
            <div class="recipe-item ${selectedRecipeId === r.recipeId ? 'selected' : ''}" 
                 onclick="selectRecipe(${r.recipeId}, this)">
                <img src="${r.mainImageUrl || 'https://via.placeholder.com/60x60?text=üçΩÔ∏è'}" 
                     alt="${r.title}"
                     onerror="this.src='https://via.placeholder.com/60x60?text=üçΩÔ∏è'">
                <div class="recipe-info">
                    <h6 class="mb-1">${r.title}</h6>
                    <small class="text-muted">
                        ${r.categoryName ? r.categoryName + ' ‚Ä¢ ' : ''}
                        ${r.difficulty || 'Ch∆∞a ph√¢n lo·∫°i'} ‚Ä¢ 
                        ${r.servings || 4} ng∆∞·ªùi
                    </small>
                </div>
                ${selectedRecipeId === r.recipeId ? '<i class="fas fa-check-circle text-primary"></i>' : ''}
            </div>
        `).join('');
    }

    // Ch·ªçn recipe
    function selectRecipe(recipeId, element) {
        selectedRecipeId = recipeId;
        
        // Update UI
        document.querySelectorAll('.recipe-item').forEach(el => el.classList.remove('selected'));
        element.classList.add('selected');
        
        document.getElementById('servingsSection').style.display = 'block';
        document.getElementById('btnConfirmAdd').disabled = false;
    }

    // X√°c nh·∫≠n th√™m recipe
    async function confirmAddRecipe() {
        if (!selectedRecipeId) return;

        const servings = parseInt(document.getElementById('servingsInput').value) || 4;

        try {
            const response = await fetch('/MealPlan?handler=AddRecipe', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': antiForgeryToken || ''
                },
                body: JSON.stringify({
                    date: selectedDate,
                    mealType: selectedMealType,
                    recipeId: selectedRecipeId,
                    servings: servings
                })
            });

            const result = await response.json();
            
            if (result.ok) {
                showToast(result.message, true);
                bootstrap.Modal.getInstance(document.getElementById('addRecipeModal')).hide();
                // Reload page ƒë·ªÉ hi·ªÉn th·ªã m√≥n m·ªõi
                setTimeout(() => location.reload(), 500);
            } else {
                showToast(result.message || 'C√≥ l·ªói x·∫£y ra', false);
            }
        } catch (error) {
            showToast('C√≥ l·ªói x·∫£y ra: ' + error.message, false);
        }
    }

    // X√≥a recipe kh·ªèi meal plan
    async function removeRecipe(mealPlanRecipeId) {
        if (!confirm('B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a m√≥n n√†y kh·ªèi k·∫ø ho·∫°ch?')) return;

        try {
            const response = await fetch('/MealPlan?handler=RemoveRecipe', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': antiForgeryToken || ''
                },
                body: JSON.stringify({ mealPlanRecipeId })
            });

            const result = await response.json();
            
            if (result.ok) {
                showToast(result.message, true);
                // X√≥a element kh·ªèi DOM
                document.querySelector(`[data-mpr-id="${mealPlanRecipeId}"]`)?.remove();
            } else {
                showToast(result.message || 'C√≥ l·ªói x·∫£y ra', false);
            }
        } catch (error) {
            showToast('C√≥ l·ªói x·∫£y ra: ' + error.message, false);
        }
    }

    // Inline edit notes
    function enableNotesEdit(element, mealPlanId) {
        const currentNotes = element.textContent.trim();
        const isPlaceholder = currentNotes === 'Nh·∫•n ƒë·ªÉ th√™m ghi ch√∫...';
        
        element.outerHTML = `
            <textarea class="notes-input" 
                      data-meal-plan-id="${mealPlanId}"
                      onblur="saveNotes(this, ${mealPlanId})"
                      placeholder="Nh·∫≠p ghi ch√∫...">${isPlaceholder ? '' : currentNotes}</textarea>
        `;
        
        const textarea = document.querySelector(`textarea[data-meal-plan-id="${mealPlanId}"]`);
        textarea.focus();
        textarea.setSelectionRange(textarea.value.length, textarea.value.length);
    }

    // L∆∞u notes
    async function saveNotes(textarea, mealPlanId) {
        const notes = textarea.value.trim();
        
        try {
            const response = await fetch('/MealPlan?handler=UpdateNotes', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': antiForgeryToken || ''
                },
                body: JSON.stringify({ mealPlanId, notes })
            });

            const result = await response.json();
            
            // Chuy·ªÉn v·ªÅ display mode
            textarea.outerHTML = `
                <div class="notes-display" 
                     onclick="enableNotesEdit(this, ${mealPlanId})"
                     data-meal-plan-id="${mealPlanId}">
                    <i class="fas fa-sticky-note me-1"></i>
                    ${notes || 'Nh·∫•n ƒë·ªÉ th√™m ghi ch√∫...'}
                </div>
            `;

            if (!result.ok) {
                showToast(result.message || 'Kh√¥ng th·ªÉ l∆∞u ghi ch√∫', false);
            }
        } catch (error) {
            showToast('C√≥ l·ªói x·∫£y ra: ' + error.message, false);
        }
    }

    // T·∫°o shopping list
    async function generateShoppingList() {
        if (!confirm('Th√™m t·∫•t c·∫£ nguy√™n li·ªáu trong tu·∫ßn v√†o Shopping List?')) return;

        try {
            const weekStart = '@Model.WeeklyMealPlan.WeekStartDate.ToString("yyyy-MM-dd")';
            
            const response = await fetch('/MealPlan?handler=GenerateShoppingList', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': antiForgeryToken || ''
                },
