        transform: scale(1.1);
    }

    .week-label {
        font-size: 1.5rem;
        font-weight: 600;
    }

    .day-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        margin-bottom: 1rem;
        overflow: hidden;
        transition: all 0.3s;
    }

    .day-card:hover {
