@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecipeSharingPlatform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RecipeSharingPlatform.Presentation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f3f4f6; /* Màu nền xám nhẹ để làm nổi bật Navbar trắng */
        }

        /* Tùy chỉnh thanh cuộn cho đẹp (Optional) */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 10px;
        }

        /* Style cho Floating Navbar */
        .floating-navbar {
            background: rgba(255, 255, 255, 0.95); /* Màu trắng hơi trong suốt */
            backdrop-filter: blur(10px); /* Hiệu ứng mờ nền phía sau */
            border-radius: 50px; /* Bo tròn dạng viên thuốc */
            padding: 0.75rem 1.5rem;
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
            margin-top: 1.5rem;
            max-width: 1100px; /* Giới hạn chiều rộng navbar */
            width: 95%;
        }

        .bg-avt{
            background-color: #6C5DD3;
        }

        /* Link trong menu */
        .nav-link {
            font-weight: 500;
            font-size: 0.95rem;
            color: #4b5563 !important; /* Màu xám đậm */
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #6C5DD3 !important; /* Màu tím khi hover */
            }

            .nav-link.active {
                color: #6C5DD3 !important;
                font-weight: 600;
            }

        /* Nút Action (Register/Login) */
        .btn-action {
            border-radius: 50px;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s;
        }

        .btn-primary-custom {
            background-color: #6C5DD3;
            border-color: #6C5DD3;
            color: white;
        }

            .btn-primary-custom:hover {
                background-color: #5b4ec2;
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(108, 93, 211, 0.3);
            }
    </style>
</head>
<body>

    <header class="fixed-top w-100 d-flex justify-content-center" style="z-index: 1030;">
        <nav class="navbar navbar-expand-lg navbar-light floating-navbar">
            <div class="container-fluid px-0">

                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-page="/Index">
                    <div class="bg-avt text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; font-size: 14px;">
                        <i class="fas fa-utensils"></i>
                    </div>
                    <span class="fw-bold text-dark">RecipeShare</span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">

                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 gap-3">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/User/Index">Community</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Recipes/Index">Recipes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/MealPlan/Index">
                                <i class="fas fa-calendar-alt me-1"></i>Meal Plan
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/ShoppingList/Index">Shopping List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Contact">Contact</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav mb-2 mb-lg-0 align-items-center gap-2">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                            var avatarUrl = User.FindFirst("Avatar")?.Value;
                            if (string.IsNullOrEmpty(avatarUrl))
                            {
                                avatarUrl = "https://ui-avatars.com/api/?name=" + User.Identity.Name + "&background=random";
                            }

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 p-0" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="@avatarUrl" alt="Avatar" class="rounded-circle border shadow-sm" width="38" height="38" style="object-fit: cover;">
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-4 mt-2 p-2" aria-labelledby="navbarDropdown">
                                    <li class="px-3 py-2 border-bottom mb-2">

                                        <div class="fw-bold text-dark">@User.Identity.Name</div>
                                        <div class="small text-muted">Signed in</div>
                                    </li>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item rounded-3" asp-page="/Admin/Dashboard"><i class="fas fa-tachometer-alt me-2 text-primary"></i>Dashboard</a></li>
                                    }

                                    <li><a class="dropdown-item rounded-3" asp-page="/User/Profile" asp-route-id="@userId"><i class="fas fa-user me-2 text-primary"></i>My Profile</a></li>
                                    <li>
                                        <a class="dropdown-item rounded-3" asp-page="/Recipes/Saved">
                                            <i class="fas fa-bookmark me-2 text-warning"></i>Saved Recipes
                                        </a>
                                    </li>
                                    <li><a class="dropdown-item rounded-3" asp-page="/User/Settings"><i class="fas fa-cog me-2 text-secondary"></i>Settings</a></li>

                                    <li><hr class="dropdown-divider my-2"></li>

                                    <li>
                                        <form asp-page="/Auth/Logout" method="post" class="d-inline w-100">
                                            <button type="submit" class="dropdown-item rounded-3 text-danger fw-semibold">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-semibold" asp-page="/Auth/Login">Log in</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-action btn-primary-custom shadow-sm text-decoration-none" asp-page="/Auth/Register">Get Started</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container pt-5 mt-5">
        <main role="main" class="pb-3 mt-4">
            @RenderBody()
        </main>
    </div>  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>