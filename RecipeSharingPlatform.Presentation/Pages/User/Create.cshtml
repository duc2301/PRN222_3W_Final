@page
@model RecipeSharingPlatform.Presentation.Pages.User.CreateModel

@{
    ViewData["Title"] = "Thêm thành viên mới";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-person-plus-fill me-2"></i>Thêm thành viên mới</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-12">
                                <h6 class="text-muted border-bottom pb-2 mb-3">Thông tin tài khoản</h6>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="User.Username" class="form-control" placeholder="Username" />
                                    <label asp-for="User.Username"></label>
                                    <span asp-validation-for="User.Username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="User.Email" class="form-control" placeholder="Email" />
                                    <label asp-for="User.Email"></label>
                                    <span asp-validation-for="User.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="User.Password" class="form-control" type="password" placeholder="Password" />
                                    <label asp-for="User.Password"></label>
                                    <span asp-validation-for="User.Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12 mt-4">
                                <h6 class="text-muted border-bottom pb-2 mb-3">Thông tin cá nhân</h6>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="User.FullName" class="form-control" placeholder="Full Name" />
                                    <label asp-for="User.FullName"></label>
                                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="User.ProfileImage" class="form-control" placeholder="URL ảnh đại diện" id="imgUrlInput" />
                                    <label asp-for="User.ProfileImage">Link ảnh đại diện (URL)</label>
                                    <span asp-validation-for="User.ProfileImage" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating">
                                    <textarea asp-for="User.Bio" class="form-control" style="height: 100px" placeholder="Giới thiệu bản thân"></textarea>
                                    <label asp-for="User.Bio"></label>
                                    <span asp-validation-for="User.Bio" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                            <a asp-page="Index" class="btn btn-outline-secondary px-4">Hủy & Quay lại</a>
                            <button type="submit" class="btn btn-primary px-4"><i class="bi bi-save me-2"></i>Lưu thông tin</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}