@page
@model RecipeSharingPlatform.Presentation.Pages.User.EditModel

@{
    ViewData["Title"] = "Chỉnh sửa thành viên";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-warning text-dark py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i>Cập nhật thông tin</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="User.UserId" />

                        <div class="row g-3">
                            <div class="col-12 text-center mb-3">
                                <img src="@(string.IsNullOrEmpty(Model.User.ProfileImage) ? "https://via.placeholder.com/150" : Model.User.ProfileImage)"
                                     alt="Avatar" class="rounded-circle shadow-sm border" style="width: 100px; height: 100px; object-fit: cover;">
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="User.Username" class="form-control" placeholder="Username" readonly />
                                    <label asp-for="User.Username"></label>
                                    <span asp-validation-for="User.Username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="User.Email" class="form-control" placeholder="Email" />
                                    <label asp-for="User.Email"></label>
                                    <span asp-validation-for="User.Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="User.Password" class="form-control" placeholder="Password" />
                                    <label asp-for="User.Password">Mật khẩu</label>
                                    <span asp-validation-for="User.Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12 mt-4">
                                <h6 class="text-muted border-bottom pb-2">Thông tin chi tiết</h6>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="User.FullName" class="form-control" placeholder="Full Name" />
                                    <label asp-for="User.FullName"></label>
                                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="User.ProfileImage" class="form-control" placeholder="URL Image" />
                                    <label asp-for="User.ProfileImage">Link ảnh (URL)</label>
                                    <span asp-validation-for="User.ProfileImage" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <textarea asp-for="User.Bio" class="form-control" style="height: 100px"></textarea>
                                    <label asp-for="User.Bio"></label>
                                    <span asp-validation-for="User.Bio" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                            <a asp-page="./Index" class="btn btn-outline-secondary px-4">Hủy bỏ</a>
                            <button type="submit" class="btn btn-warning px-4 text-dark fw-bold"><i class="bi bi-check-lg me-2"></i>Cập nhật</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}